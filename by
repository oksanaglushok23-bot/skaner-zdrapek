<body>
<header>Сканер Лотерейних Квитків</header>
<div id="scanner">
  <video id="preview"></video>
</div>
<div id="output">Відскануйте код зі скретч-квитка</div>
<button onclick="startScanner()">Почати сканування</button>
<div id="history">
  <h3>Історія сканувань:</h3>
  <ul id="scanList"></ul>
</div>

<script type="module">
import QrScanner from "https://cdn.jsdelivr.net/npm/qr-scanner@1.4.2/qr-scanner.min.js";

let videoElem = document.getElementById('preview');
let outputElem = document.getElementById('output');
let scanList = document.getElementById('scanList');
let qrScanner;

// Завантаження історії з localStorage
let history = JSON.parse(localStorage.getItem('scanHistory') || '[]');
updateHistoryList();

function updateHistoryList() {
    scanList.innerHTML = '';
    history.slice().reverse().forEach(code => {
        let li = document.createElement('li');
        li.textContent = code;
        scanList.appendChild(li);
    });
}

function addToHistory(code) {
    if (!history.includes(code)) { // уникаємо дублювання
        history.push(code);
        localStorage.setItem('scanHistory', JSON.stringify(history));
        updateHistoryList();
    }
}

function startScanner() {
    if (qrScanner) qrScanner.destroy();
    qrScanner = new QrScanner(videoElem, result => {
        outputElem.textContent = "Відсканований код: " + result;
        addToHistory(result);
        qrScanner.stop();
    }, {
        highlightScanRegion: true,
        highlightCodeOutline: true,
    });
    qrScanner.start().catch(err => {
        outputElem.textContent = "Не вдалося запустити камеру: " + err;
    });
}
</script>
</body>
